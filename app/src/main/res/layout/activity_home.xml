<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B3D3D"
    android:fillViewport="true"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">



        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/cambio3"
                android:background="@drawable/circle_green_bg"
                android:padding="12dp"
                app:tint="#04A777" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">


                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bem-vindo de volta,"
                    android:textColor="#83E377"
                    android:textSize="14sp"/>


                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente GreenBanK"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/notificationsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                app:tint="#83E377" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/highlightCard"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@drawable/premium_green_gradient"
            android:padding="24dp"
            android:elevation="6dp"
            android:layout_marginBottom="24dp"
            android:gravity="bottom">


            <TextView
                android:id="@+id/impactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEU IMPACTO VERDE"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/impactDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Você está entre os\nTOP 10% mais sustentáveis"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginVertical="12dp"/>


            <LinearLayout
                android:id="@+id/detailsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver detalhes"
                    android:textColor="#83E377"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginStart="4dp"
                    app:tint="#83E377" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEU IMPACTO AMBIENTAL"
            android:textColor="#83E377"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="28dp">



            <LinearLayout
                android:id="@+id/treesCard"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_green_card"
                android:padding="16dp">


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_tree"
                    app:tint="#83E377" />


                <TextView
                    android:id="@+id/treesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Árvores plantadas"
                    android:textColor="#83E377"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/co2Card"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_green_card"
                android:padding="16dp">


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_co2"
                    app:tint="#83E377"/>


                <TextView
                    android:id="@+id/co2Reduced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48kg"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CO₂ reduzido"
                    android:textColor="#83E377"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/waterCard"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_green_card"
                android:padding="16dp">


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_water"
                    app:tint="#83E377"/>


                <TextView
                    android:id="@+id/waterSaved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.600L"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Água economizada"
                    android:textColor="#83E377"
                    android:textSize="10sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </GridLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEU CARTÃO VERDE"
            android:textColor="#83E377"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>


        <LinearLayout
            android:id="@+id/greenCardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_green_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">


                <ImageView
                    android:id="@+id/cardIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_payment"
                    app:tint="#83E377"/>


                <TextView
                    android:id="@+id/cardName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GreenCard Premium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:src="@drawable/card"

                />


            <TextView
                android:id="@+id/cardDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seu cartão está compensando 12kg de CO₂ por mês. Continue usando para aumentar seu impacto positivo no planeta!"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cashback Acumulado"
                        android:textColor="#83E377"
                        android:textSize="12sp"/>


                    <TextView
                        android:id="@+id/cashbackAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 142,50"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Próximo Nível"
                        android:textColor="#83E377"
                        android:textSize="12sp"/>


                    <TextView
                        android:id="@+id/nextLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85/100 pts"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DICAS SUSTENTÁVEIS"
            android:textColor="#83E377"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_green_card"
            android:padding="20dp">



            <LinearLayout
                android:id="@+id/tip1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_solar_energy"
                    app:tint="#83E377"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">


                    <TextView
                        android:id="@+id/tip1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energia Solar"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/tip1Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reduza sua conta em 95% com um sistema fotovoltaico. O GreenBank oferece taxas especiais para financiamento."
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/tip2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_shopping"
                    app:tint="#83E377"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">


                    <TextView
                        android:id="@+id/tip2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consumo Consciente"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/tip2Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prefira empresas com selo verde. Seu GreenCard oferece cashback dobrado em estabelecimentos sustentáveis."
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/tip3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_invest"
                    app:tint="#83E377"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">


                    <TextView
                        android:id="@+id/tip3Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Investimento Verde"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/tip3Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aloque 10% dos seus investimentos em fundos sustentáveis e receba benefícios exclusivos no seu cartão."
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>



